<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tompee.utilities.knowyourmeds">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KnowYourMedsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.BrandedLaunch"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <activity
            android:name=".feature.search.SearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.help.HelpActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".feature.detail.DetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".view.base.BaseActivity" />
        <activity
            android:name=".feature.spl.MarketDrugActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />


        <activity
            android:name=".view.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
    </application>

</manifest>