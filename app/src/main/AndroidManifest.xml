<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tompee.utilities.knowyourmeds">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KnowYourMedsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.BrandedLaunch">
        <activity
            android:name=".view.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MedDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".view.base.BaseActivity" />
        <activity
            android:name=".view.HelpActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".view.SPLDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
    </application>

</manifest>