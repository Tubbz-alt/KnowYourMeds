<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:actionMenuTextColor">@color/colorTextLight</item>
        <item name="actionMenuTextColor">@drawable/selector_action_menu</item>
        <item name="android:textColorSecondary">@color/colorTextLight</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemDropDownStyle</item>
    </style>

    <!-- Branded Launch Theme -->
    <style name="AppTheme.BrandedLaunch">
        <item name="android:windowBackground">@drawable/launcher_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="SpinnerItemDropDownStyle">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabIndicatorColor">@color/colorBackground</item>
        <item name="tabSelectedTextColor">@color/colorTextLight</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>


</resources>