<?xml version="1.0" encoding="utf-8"?>
<com.tompee.utilities.knowyourmeds.view.custom.SwipeListItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/back_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/list_item_icon_dimension"
            android:layout_height="@dimen/list_item_icon_dimension"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/list_item_margin"
            android:layout_marginRight="@dimen/list_item_margin"
            android:background="@drawable/ic_delete_white"
            android:contentDescription="@string/default_content_description" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/front_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/med_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/list_item_margin"
            android:paddingRight="@dimen/list_item_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/dark_text" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height"
            android:layout_weight="0.25"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/list_item_margin">

            <ImageView
                android:id="@+id/presc_icon"
                android:layout_width="@dimen/list_item_icon_dimension"
                android:layout_height="@dimen/list_item_icon_dimension"
                android:background="@drawable/ic_rx_off"
                android:contentDescription="@string/default_content_description" />

            <TextView
                android:id="@+id/presc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:ellipsize="end"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/dark_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height"
            android:layout_weight="0.35"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tty_icon"
                android:layout_width="@dimen/list_item_icon_dimension"
                android:layout_height="@dimen/list_item_icon_dimension"
                android:background="@drawable/ic_rx_off"
                android:contentDescription="@string/default_content_description" />

            <TextView
                android:id="@+id/tty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/dark_text" />

        </LinearLayout>

    </LinearLayout>

</com.tompee.utilities.knowyourmeds.view.custom.SwipeListItemView>