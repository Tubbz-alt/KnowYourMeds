<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/disclaimer_margin"
        android:layout_marginRight="@dimen/disclaimer_margin"
        android:layout_marginTop="@dimen/disclaimer_view_separator"
        android:text="@string/disclaimer_title_nlm"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/disclaimer_margin"
        android:layout_marginRight="@dimen/disclaimer_margin"
        android:layout_marginTop="@dimen/disclaimer_view_separator"
        android:text="@string/disclaimer_message_nlm"
        android:textAppearance="?android:attr/textAppearanceListItem" />

</LinearLayout>