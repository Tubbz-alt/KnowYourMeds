<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/floating_search_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:floatingSearch_close_search_on_keyboard_dismiss="true"
        app:floatingSearch_dimBackground="false"
        app:floatingSearch_leftActionMode="showSearch"
        app:floatingSearch_searchBarMarginLeft="@dimen/margin"
        app:floatingSearch_searchBarMarginRight="@dimen/margin"
        app:floatingSearch_searchHint="@string/search_hint"
        app:floatingSearch_showSearchKey="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/search_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:indicatorName="BallScaleIndicator" />

        <ViewSwitcher
            android:id="@+id/view_switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:visibility="gone"
                app:cardBackgroundColor="@color/colorPrimarAlpha"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:textColor="@color/light_text" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/light_text" />

                    <TextView
                        android:id="@+id/rx_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:textColor="@color/light_text" />

                    <TextView
                        android:id="@+id/tty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:textColor="@color/light_text" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                app:cardBackgroundColor="@color/colorPrimarAlpha"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/suggestion_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin"
                        android:text="@string/suggestions_results"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:textColor="@color/light_text" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/light_text" />

                    <ListView
                        android:id="@+id/suggestion_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin"
                        android:divider="@android:color/transparent"
                        android:minHeight="@dimen/list_view_height" />

                    <TextView
                        android:id="@+id/text_no_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:minHeight="@dimen/list_view_height"
                        android:text="@string/no_suggestions"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/dark_text"
                        android:visibility="gone" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </ViewSwitcher>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            app:backgroundTint="@color/light_text"
            android:layout_marginRight="32dp"
            android:clickable="true"
            android:src="@drawable/ic_exit_to_app_black"
            android:visibility="invisible"
            app:elevation="10dp" />

    </FrameLayout>
</LinearLayout>